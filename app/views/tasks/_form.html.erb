<%= form_with(model: task, local: true) do |f| %>
    <% if task.errors.any? %>
        <div id='error_explanatio'>
            <ul>
                <% task.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <%= f.label :status, 'テキスト' %>
    <%= f.text_field :text %>
    
    <%= f.label :content, 'タスク' %>
    <%= f.text_field :content %>
    
    <%= f.submit '投稿' %>
    
<% end %>    
    